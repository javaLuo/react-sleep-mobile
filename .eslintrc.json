{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": true,
        "mocha": true,
        "node": true,
        "jest": true,
        "jasmine": true
    },
    "extends": "plugin:react/recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "impliedStrict": true,
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
      "semi": "warn",
      "no-cond-assign": "error",
      "no-debugger": "error",
      "no-dupe-args": "error",
      "no-caller": "error",
      "no-unmodified-loop-condition": "error",
      "no-with": "error",
      "no-catch-shadow": "error",
      "prettier/prettier": "warn"
    }
}